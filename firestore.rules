rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      match /surveys/{docId} { allow read, write: if request.auth != null && request.auth.uid == userId; }
      match /quiz_results/{docId} { allow read, write: if request.auth != null && request.auth.uid == userId; }
    }
    match /exercises/{doc} { allow read: if request.auth != null; allow write: if false; }
    match /public_content/{doc} { allow read: if request.auth != null; allow write: if false; }
  }
}